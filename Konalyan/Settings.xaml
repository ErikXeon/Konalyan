<Window x:Class="Konalyan.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="480" Width="815"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundColor}"
        Icon="/blog.ico"
        ResizeMode="NoResize">
    <Canvas>
        <Border x:Name="TopBar" Background="{DynamicResource MainColor}" Width="800" Height="60"/>
        <TextBlock Text="Настройки темы" FontSize="20" FontWeight="Bold" Foreground="White" Canvas.Left="20" Canvas.Top="15"/>

        <!-- Кнопки цветов для основного цвета -->
        <Button Content="" Width="40" Height="40" Canvas.Left="20" Canvas.Top="80" Background="#6A0DAD" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="70" Canvas.Top="80" Background="#FF4500" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="120" Canvas.Top="80" Background="#008000" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="170" Canvas.Top="80" Background="#0000FF" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="220" Canvas.Top="80" Background="#FFD700" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="270" Canvas.Top="80" Background="#FF69B4" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="320" Canvas.Top="80" Background="#00CED1" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="370" Canvas.Top="80" Background="#4B0082" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="420" Canvas.Top="80" Background="#A52A2A" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="470" Canvas.Top="80" Background="#FF8C00" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="520" Canvas.Top="80" Background="#00FF7F" Click="ChangeMainColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="570" Canvas.Top="80" Background="#1E90FF" Click="ChangeMainColor_Click"/>

        <!-- Кнопки цветов для фона -->
        <Button Content="" Width="40" Height="40" Canvas.Left="20" Canvas.Top="140" Background="White" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="70" Canvas.Top="140" Background="#F0F0F0" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="120" Canvas.Top="140" Background="#FFEFD5" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="170" Canvas.Top="140" Background="#D3D3D3" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="220" Canvas.Top="140" Background="#FAFAD2" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="270" Canvas.Top="140" Background="#E6E6FA" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="320" Canvas.Top="140" Background="#F5F5DC" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="370" Canvas.Top="140" Background="#FFFACD" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="420" Canvas.Top="140" Background="#F0FFF0" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="470" Canvas.Top="140" Background="#F0FFFF" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="520" Canvas.Top="140" Background="#FFE4E1" Click="ChangeBackgroundColor_Click"/>
        <Button Content="" Width="40" Height="40" Canvas.Left="570" Canvas.Top="140" Background="#FFF0F5" Click="ChangeBackgroundColor_Click"/>

        <!-- Кнопки навигации -->
        <Button x:Name="BtnHome" Content="Главная" Width="100" Height="30" Canvas.Left="195" Canvas.Top="15"
                Background="White" Foreground="{DynamicResource MainColor}" FontWeight="Bold" Click="BtnHome_Click"/>
        <Button x:Name="BtnMyArticles" Content="Мои статьи" Width="100" Height="30" Canvas.Left="300" Canvas.Top="15"
                Background="White" Foreground="{DynamicResource MainColor}" FontWeight="Bold" Click="BtnMyArticles_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="BtnExit" Content="Выйти" Width="80" Height="30" Canvas.Left="700" Canvas.Top="15"
                Background="White" Foreground="{DynamicResource MainColor}" FontWeight="Bold" Click="BtnExit_Click"/>
    </Canvas>
</Window>
