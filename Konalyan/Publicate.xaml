<Window x:Class="Konalyan.Publicate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Публикация" Height="480" Width="815"
        WindowStartupLocation="Manual"
        Background="{DynamicResource BackgroundColor}">
    <Canvas>
        <Border Background="{DynamicResource MainColor}" Width="800" Height="60" Canvas.Left="0" Canvas.Top="0"/>
        <TextBlock Text="Создать публикацию" FontSize="22" FontWeight="Bold" Foreground="White" Canvas.Left="20" Canvas.Top="15"/>
        <Button Content="Назад" Width="80" Height="30" Canvas.Left="700" Canvas.Top="15"
                Background="White" Foreground="{DynamicResource MainColor}" FontWeight="Bold" Click="BtnBack_Click"/>

        <TextBlock Text="Заголовок" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource MainColor}" Canvas.Left="20" Canvas.Top="80"/>
        <Border Canvas.Left="20" Canvas.Top="105" Width="760" Height="35"
                Background="White" BorderBrush="{DynamicResource MainColor}" BorderThickness="2" CornerRadius="5">
            <TextBox x:Name="TitleTextBox" FontSize="16" Background="White" BorderThickness="0" Padding="5"/>
        </Border>

        <TextBlock Text="Текст публикации" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource MainColor}" Canvas.Left="20" Canvas.Top="145"/>
        <Border Canvas.Left="20" Canvas.Top="170" Width="760" Height="170"
                Background="White" BorderBrush="{DynamicResource MainColor}" BorderThickness="2" CornerRadius="10">
            <TextBox x:Name="PublicationTextBox" AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" FontSize="16" Background="White" BorderThickness="0" Padding="10"/>
        </Border>

        <TextBlock Text="Хэштэги" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource MainColor}" Canvas.Left="20" Canvas.Top="350"/>
        <Border Canvas.Left="20" Canvas.Top="375" Width="610" Height="35"
        Background="White" BorderBrush="{DynamicResource MainColor}" BorderThickness="2" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBox x:Name="HashtagsTextBox" FontSize="16" Background="White" BorderThickness="0" Padding="5" Margin="0,0,8,0"/>
        </Border>

        <Button x:Name="BtnPublish" Content="Опубликовать" Width="150" Height="35" Canvas.Left="630" Canvas.Top="375"
        Background="{DynamicResource MainColor}" Foreground="White" FontWeight="Bold" Click="BtnPublish_Click"/>
    </Canvas>
</Window>
